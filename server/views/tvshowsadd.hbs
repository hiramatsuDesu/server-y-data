<h1>Formulario de alta</h1>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header">
            <h1>Agregar Película...</h1>
            <div><a href="/shows" class="btn btn-lg btn-outline-success">
                Volver
            </a></div>
        </div>
        <div class="card-body">
            <form id="tvshowadd" action="/shows" method="POST" enctype="application/json">
                <div class="form-group">
                    <input class="form-control" type="text" name="title" placeholder="Título de la película..." required minlength="5">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="year" placeholder="Año..." required min="1900" max="2030">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="country" placeholder="Pais..." required >
                </div>
                <div class="form-group ">
                    <label class="input-group-prepend">
                        <span class="btn btn-primary">Cargar poster<input type="file" name="movieimage" class="d-none" onchange="onFileSelected(event);">
                        </span>
                        <input class="form-control" type="text" readonly name="posterName" id="posterName" placeholder="Poster..." required>
                    </label>
                    <input type="hidden" name="poster" id="poster" class="d-none" >
                </div>
                <div class="form-group">
                    <img class="img img-thumbnail" src="{{tvshow.poster}}" style="width: 200px; height=320px;">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="seasons" placeholder="Temporada..." required min="1">
                </div>
                <div class="form-group">
                    <select class="form-control" type="text" name="genre" placeholder="Genero..." required>
                        <option value="" disabled selected>Seleccione un género...</option>
                        <option value="Drama">Drama</option>
                        <option value="Fantasy">Fantasia</option>
                        <option value="Sci-Fi">Ciencia Ficción</option>
                        <option value="Thriller">Suspenso</option>
                        <option value="Comedy">Comedia</option>
                    </select>
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="summary" placeholder="Resumen..." required cols="250" rows="5"></textarea>
                </div>
                <div class="mt-3">
                    <button class="btn btn-success btn-lg" type="submit">Guardar</button>
                    <button class="btn btn-danger btn-lg" type="reset">Limpiar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/javascripts/fileupload.js"></script>